@model IEnumerable<ScoutFieldLog_GroupProject.Models.StartUpCompanies>
@{
    ViewBag.Title = "Company List";
}
<h3>Leads</h3>
@*Display Fresh Leads*@
<table class="table">
    <tr>
        <th ="freshnessTableHeading">
        </th>
        <th>
            @Html.DisplayNameFor(x => x.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Image)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.DateAssigned)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.TwoLineSummary)
        </th>
        <th></th>
    </tr>
    @foreach (var company in Model)
    {
        <tr>
            <td class="freshness">
                @* Freshness Icon *@
                @if (company.DateAssigned > DateTime.Today.AddDays(-7))
                {
                    <p>New</p>
                }
            </td>
            <td>
                @*Link to Company Details View*@
                @Html.ActionLink(@company.CompanyName, "CompanyDetails", new { companyid = company.Id })
            </td>
            <td>
                @if (company.Image != null)
                {
                    <img src="@company.Image" alt="Company Logo" width="300" />
                }
            </td>
            <td>
                @Html.DisplayFor(x => company.DateAssigned)
            </td>
            <td>
                @Html.DisplayFor(x => company.TwoLineSummary)
            </td>
            <td>

                @*@Html.ActionLink("Edit", "EditCompany", new { companyId = company.Id })*@
                <form action="_LeadDetails">
                    <input type="hidden"
                           name="companyId"
                           value="@company.Id" />
                    <input type="submit"
                           value="View Details in New Page"
                           class="leadDetailsButton" />
                </form>
                <button class="leadDetailsButton">View Details on This Page</button>
                <form action="_SimilarStartupsPartialView">
                    <input type="hidden"
                           name="companyId"
                           value="@company.Id" />
                    <input type="submit"
                           value="Suggest Similar in New Page"
                           class="suggestSimilarButton" />
                </form>
                <form action="EditCompany">
                    <input type="hidden"
                           name="companyId"
                           value="@company.Id" />
                    <input type="submit"
                           value="Edit Company" />
                </form>
                <form action="ListStartUpProjects" method="get">
                    <input type="hidden"
                           name="companyName"
                           value="@company.CompanyName" />
                    <input type="submit"
                           value="List StartUp Projects" />
                </form>
            </td>
        </tr>
     }
</table>
