@model IEnumerable<ScoutFieldLog_GroupProject.Models.StartUpCompanies>
@{
    ViewBag.Title = "Connector View";
}

<h2>Connector View</h2>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="sidebarContent">
                        @{
                            Html.RenderPartial("SelectStartupList", Model);
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="recommendations" class="sidebarContent"></div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div id="loading" style="display: none">
                <i><b>Loading... please wait</b></i>
            </div>
            <div id="mainContent" style="display: block">
                <p>Please select a company.
            </div>
        </div>
    </div>
</div>

<div class="modal" id="saveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Save Progress</h4>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div id="saveStatus" class="modal-body">
                Saving... Please wait...
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>