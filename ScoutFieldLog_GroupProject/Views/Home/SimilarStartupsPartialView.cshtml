@model IEnumerable<ScoutFieldLog_GroupProject.Models.RecommendedAlignment>

<div class="container" >

    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col-md-12">
                <i>This startup matches no keywords.</i>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <p>Startups matching keywords:</p>
            </div>
        </div>
    }

    @foreach (var item in Model)
    {
        <div class="card card-primary">
            <div class="card-header">
                <a href="" onclick='document.getElementById("companySelector").selectedIndex=document.getElementById("@item.Id").index;document.getElementById("@item.Id").click();return false;'>
                    @item.CompanyName
                </a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        Technology Areas:
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        @if (item.TechnologyAreas != null)
                        {
                            @item.TechnologyAreas
                        }
                        else
                        {
                            <i>none</i>
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        Two-Line Summary:
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        @item.TwoLineSummary
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        Alignments:
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        @if (item.Alignments != null)
                        {
                            @item.Alignments.Replace(",", ", ")
                        }
                        else
                        {
                            <i>none</i>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
