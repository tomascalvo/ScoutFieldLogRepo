@model Evaluation

<div class="card card-primary">
    <div class="card-header">
        <h3>Review Evaluation</h3>
        <h3>@Model.CompanyName</h3>

        @*Message*@
        @if (ViewBag.Message != null)
        {
            <h4>@ViewBag.Message</h4>
        }
        <button onclick="cancelUpdatePage()">Return To Company Details</button>
    </div>
    <div id="mainContent" class="card-body">
            <table class="table">
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Author)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Posted)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Posted.Date)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Alignments)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Alignments)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Themes)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Themes)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Landscapes)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Landscapes)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.TechnologyAreas)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.TechnologyAreas)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Uniqueness)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Uniqueness)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Team)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Team)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Potential)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Potential)
                    </td>
                </tr>
                @if (User.HasClaim("Role", "Partner"))
                {
                    <tr>
                        <td>
                            @Html.DisplayNameFor(x => x.Interest)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.Interest)
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        @Html.DisplayNameFor(x => x.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.Comment)
                    </td>
                </tr>
            </table>
        }
        <div id="buttons">
            @*@Html.ActionLink("Save", "PromoteLead", new { company = Model })*@
            <form action="AnalyzeStartup" name="AnalyzeStartupForm">
                <input type="hidden"
                       name="companyId"
                       value="@Model.StartUpCompaniesId" />
                <input type="submit" id="AnalyzeSubmit"
                       value="Analyze" />
            </form>
            <form action="CompanyDetails" name="CompanyDetailsForm">
                <input type="hidden"
                       name="companyId"
                       value="@Model.StartUpCompaniesId" />
                <input type="submit" id="CompanyDetailsSubmit"
                       value="Company Details" />
            </form>
            <form action="ReviewEvaluations" name="ReviewEvaluationsForm">
                <input type="submit" id="ReviewEvaluationsSubmit"
                       value="All Evaluations" />
            </form>
        </div>
</div>
</div>
